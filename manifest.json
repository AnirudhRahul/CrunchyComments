{
  "name": "CrunchyComments",
  "version": "1.0",
  "description": "Get r/anime comments on crunchyroll",
  "permissions": ["activeTab", "declarativeContent", "storage", "*://www.crunchyroll.com/*"],
  "options_page": "pages/options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "pages/popup.html",
    "default_icon": "images/app-icon4_128.png"
  },
  "icons": {
    "16": "images/app-icon4_16.png",
    "32": "images/app-icon4_32.png",
    "48": "images/app-icon4_48.png",
    "128": "images/app-icon4_128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.crunchyroll.com/*/*"],
      "css": [
        "Reddit-Embed/css/red-important.css",
        "Reddit-Embed/css/light-theme.css",
        "content_scripts/buttons.css",
        "content_scripts/tabs.css"
      ],
      "js": [
        "Reddit-Embed/dist/bundle.min.js",
        "content_scripts/reddit-api.min.js",
        "content_scripts/fuzzball_ultra_lite.js",
        "content_scripts/matcher.js",
        "content_scripts/button-templates.js",
        "content_scripts/inject.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "Reddit-Embed/css/fonts/Reddit-IBMPlexSans-Bold.woff2",
    "Reddit-Embed/css/fonts/Reddit-IBMPlexSans.woff2",
    "Reddit-Embed/css/fonts/Reddit-Noto-Mono.woff2",
    "Reddit-Embed/css/fonts/Reddit-Noto-Sans.woff2",
    "images/ranime-icon-mask.png",
    "images/ui-icons/*"
  ],
  "manifest_version": 2
}
